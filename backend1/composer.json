{
    "name": "sabiteck/school-management-system",
    "description": "School Management System with PHP Slim Framework",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "slim/slim": "^4.11",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.0",
        "firebase/php-jwt": "^6.8",
        "vlucas/phpdotenv": "^5.5",
        "respect/validation": "^2.2",
        "selective/basepath": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    }
}
